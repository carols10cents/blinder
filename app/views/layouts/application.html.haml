!!!
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge" }
    %meta{ :name => "description", :content => "" }
    %meta{ :name => "viewport", :content => "width=device-width" }

    %link{ rel: 'icon', href: '/favicon.ico', type: 'image/x-icon' }

    %title= @title || "Call for Proposals"

    = stylesheet_link_tag "application"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:300,400,900"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %main
      %h1
        = link_to "https://www.rust-belt-rust.com" do
          Rust Belt Rust 2017 CFP
      .notice= flash[:notice]
      = render 'shared/user_nav'
      .content= yield
    %footer
      %address
        %ul
          %li= link_to "Code of Conduct", "http://www.rust-belt-rust.com/conduct.html", class: 'footer-link conduct'
          %li= mail_to ENV['CFP_FROM'], ENV['CFP_FROM'], class: 'footer-link mail'
          %li= link_to "Twitter", "https://twitter.com/rustbeltrust", class: 'footer-link twitter'
