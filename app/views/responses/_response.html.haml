%div{ class: "question #{ size_class_for(response) }" }
  = hidden_field_tag "responses[][question_id]", response.question.id
  = hidden_field_tag("responses[][id]", response.id) if response.id
  = label_tag "#{response.question.id}_value", response.question.label.html_safe, class: classes_for(response.question)
  = input_for response
