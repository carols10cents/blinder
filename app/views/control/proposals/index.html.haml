%h4= "Proposals for #{ @event.title }"
.proposal_list
  %h5 Proposals needing scrubbed
  %ol.proposals
    - @unsafe.each do |proposal|
      %li
        = link_to proposal.slug[0,6], edit_control_event_proposal_path(@event, proposal), class: 'slug'
        %span.destroy= link_to '(destroy)', control_event_proposal_path(@event, proposal), method: :delete, :'data-confirm' => "Destroy for realsies?"
        %span.notes=  notes_for proposal
        %span.updated= "updated: #{ last_updated proposal }"

.proposal_list
  %h5 Safe for Review Proposals
  %ol.proposals
    - @safe.each do |proposal|
      %li
        = link_to proposal.slug[0,6], edit_control_event_proposal_path(@event, proposal), class: 'slug'
        %span.notes=  notes_for proposal
        %span.updated= "updated: #{ last_updated proposal }"

.export
  %h5 Export scored proposals by talk type
  %ul.formats
    - @talk_formats.each do |fmt|
      %li
        = link_to fmt, export_control_event_proposals_path(@event, {fmt: fmt})
